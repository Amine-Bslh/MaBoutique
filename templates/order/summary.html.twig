{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h2>RÃ©capitulatif de ma commande </h2>
        <div class="row">
            <div class="col-md-8">
                <div class="bg-light p-3">
                    <strong>Contenu de mon panier</strong>
                    {% for product in cart %}
                        <div class="row mt-2">
                            <div class="col-md-2">
                                <img class="img-fluid" src="/uploads/{{ product.object.illustration }}"
                                     alt="{{ product.object.name }}">
                            </div>
                            <div class="col-md-6">
                                <stron>{{ product.object.name }}</stron>
                                <span class="d-block small">Prix unitaire : {{ product.object.priceWT|price }}</span>
                            </div>
                            <div class="col-md-2 text-right">
                                <span class="badge text-bg-secondary">x{{ product.qty }}</span>
                            </div>
                            <div class="col-md-2">
                                <strong>{{ ( product.qty * product.object.priceWT)|price }}</strong>

                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="bg-light p-3 my-3">
                    Contenu de mon panier <br/>
                    <strong>Votre adresse de livraison :</strong> <br>
                    {{ choices.addresses.firstname }} {{ choices.addresses.lastname }} <br>

                    {{ choices.addresses.address }} <br>
                    {{ choices.addresses.city }} - {{ choices.addresses.country }}
                </div>


                <div class="bg-light p-3">
                    <strong>Votre transporteur :</strong> <br>
                    {{ choices.carriers.name }}<br>
                    {{ choices.carriers.description }}
                </div>


            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <sapn class="fw-bold">Total produit :</sapn>
                        <sapn >{{ fullCartQuantity }}</sapn>
                    </div>
                </div>
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between mt-3">
                        <sapn class="fw-bold">Total Transporteur:</sapn>
                        <span>{{ choices.carriers.price |price }}</span>
                    </div>
                </div>
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between mt-3">
                    <sapn class="fw-bold">Total commande</sapn>
                    <sapn >{{ (totalWT + choices.carriers.price) |price }}</sapn>
                    </div>

                </div>
                <div>
                    <a href="" class="btn btn-success w-100 mt-3">Payer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
