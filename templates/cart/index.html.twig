{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h2>Mon panier </h2>
        <div class="row">
            <div class="col-md-8">

                {% for product in cart %}
                    <div class="row mt-2">
                        <div class="col-md-2">
                            <img class="img-fluid" src="/uploads/{{ product.object.illustration }}"
                                 alt="{{ product.object.name }}">
                        </div>
                        <div class="col-md-6">
                            <stron>{{ product.object.name }}</stron>
                            <span class="d-block small">Prix unitaire : {{ product.object.priceWT|price }}</span>
                        </div>
                        <div class="col-md-2 text-right">
                            <a href="{{ path('app_cart_decrease',{ id:product.object.id }) }}"> -</a> <span
                                    class="badge text-bg-secondary">x{{ product.qty }}</span><a
                                    href="{{ path('app_cart_add',{ id:product.object.id }) }}"> +</a>

                        </div>
                        <div class="col-md-2">
                            <strong>{{ ( product.qty * product.object.priceWT)|price }}</strong>

                        </div>
                    </div>
                {% endfor %}

                <a href="{{ path('app_cart_remove') }}" class="small d-block mt-3">Vider le panier</a>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <sapn class="fw-bold">Total produit :</sapn>
                        <sapn class="fw-bold">{{ fullCartQuantity }}</sapn>
                    </div>
                </div>
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between my-3">
                        <sapn class="fw-bold">Prix Total T.T.C</sapn>
                        <sapn class="fw-bold">{{ totalWT|price }}</sapn>
                    </div>
                </div>
                <div>
                    <a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-3">Commander</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
